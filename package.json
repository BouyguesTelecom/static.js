{
  "name": "@bouygues-telecom/staticjs",
  "version": "1.0.0",
  "type": "module",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "bin": {
    "create-staticjs-app": "./dist/scripts/create-static-app.js",
    "bt-staticjs": "./dist/scripts/cli.js",
    "generate-test-multiapps": "./dist/scripts/generate-test-multiapps.js"
  },
  "scripts": {
    "prebuild": "npm run build:server && tsc -p ./tsconfig.json",
    "build": "cd templates/react && rimraf dist && rimraf cache && node ../../dist/helpers/cachePages.js && vite build --config ../../vite.config.js && tsx ../../dist/scripts/build-html.js",
    "build:server": "cd server && npm run build",
    "build:all": "npm run build:server && npm run build",
    "generate:test": "cd templates/react && node ../../scripts/generate-test-multiapps.js",
    "start": "cd templates/react && npm start",
    "dev": "npm run build:server && cd templates/react && npm run dev",
    "dev:server": "cd server && npm run dev",
    "build:templates": "cd templates/react && npm run build"
  },
  "dependencies": {
    "@types/node": "^20",
    "cli-spinner": "^0.2.10",
    "commander": "^14.0.0",
    "giget": "^2.0.0",
    "nodemon": "^3.1.10",
    "path": "^0.12.7",
    "readline": "^1.3.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.4",
    "typescript": "^5"
  },
  "volta": {
    "node": "24.1.0"
  },
  "workspaces": [
    "templates/react",
    "server"
  ],
  "devDependencies": {
    "@types/chokidar": "^2.1.7",
    "@types/cli-spinner": "^0.2.3",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^4.0.0",
    "@types/ws": "^8.18.1"
  }
}
