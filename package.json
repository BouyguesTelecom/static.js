{
  "name": "static.js",
  "version": "1.0.0",
  "description": "A static site generator with React support",
  "directories": {
    "lib": "lib",
    "templates": "templates"
  },
  "workspaces": [
    "lib",
    "templates/react"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:lib": "npm run build --workspace=lib",
    "build:react": "npm run build --workspace=templates/react",
    "start:react": "npm run start --workspace=templates/react",
    "dev": "npm run build --workspace=lib && npm run dev --workspace=templates/react",
    "test": "npm run test --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "setup-dev": "node ./setup-dev.js"
  },
  "devDependencies": {
    "@types/node": "^20",
    "tsx": "^4.19.4",
    "typescript": "^5",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  },
  "keywords": [
    "static-site-generator",
    "react",
    "vite",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  }
}
