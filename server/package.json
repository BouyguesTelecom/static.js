{
  "name": "@static-js/server",
  "version": "1.0.0",
  "description": "StaticJS development server with hot reload and TypeScript support",
  "type": "module",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "watch": "tsc --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "cors": "^2.8.5",
    "compression": "^1.8.1",
    "express-rate-limit": "^8.0.1",
    "ws": "^8.18.3",
    "chokidar": "^3.5.3",
    "vite": "^6.3.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/express": "^5.0.3",
    "@types/helmet": "^4.0.0",
    "@types/cors": "^2.8.19",
    "@types/compression": "^1.8.1",
    "@types/ws": "^8.18.1",
    "@types/chokidar": "^2.1.7",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "typescript": "^5",
    "tsx": "^4.19.4",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "staticjs",
    "server",
    "typescript",
    "express",
    "hot-reload",
    "development"
  ],
  "author": "StaticJS Team",
  "license": "MIT"
}